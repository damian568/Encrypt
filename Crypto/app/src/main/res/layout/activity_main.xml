<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:background="@drawable/gradient_background"
            tools:context=".MainActivity">

            <EditText
                android:id="@+id/inputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_text"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:maxLength="@integer/length_text"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/inputTextKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_key"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:inputType="text"
                android:maxLength="@integer/length_key"
                app:layout_constraintTop_toBottomOf="@+id/inputText" />

            <Button
                android:id="@+id/encryptButton"
                android:layout_width="@dimen/btn_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/custom_button"
                android:layout_marginTop="@dimen/margin_top_btn"
                android:text="@string/encrypt"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inputTextKey" />

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/encryptButton" />

            <TextView
                android:id="@+id/resultTextViewKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/resultTextView" />

            <ImageView
                android:id="@+id/schemeImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/resultTextViewKey"/>

            <TextView
                android:id="@+id/textW1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/schemeImg" />

            <TextView
                android:id="@+id/textW2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/textW1" />

            <TextView
                android:id="@+id/textW3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/textW2" />

            <TextView
                android:id="@+id/textW4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/textW3" />

            <TextView
                android:id="@+id/textW5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/textW4" />

            <TextView
                android:id="@+id/textW6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/textW5" />

            <TextView
                android:id="@+id/textW7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/textW6" />

            <TextView
                android:id="@+id/textW8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/textW7" />

            <TextView
                android:id="@+id/textW9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/textW8" />

            <TextView
                android:id="@+id/textW10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/textW9" />

            <TextView
                android:id="@+id/textW11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/textW10" />

            <TextView
                android:id="@+id/textW12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/textW11" />

            <TextView
                android:id="@+id/textW13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/textW12" />

            <TextView
                android:id="@+id/textW14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/textW13" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>